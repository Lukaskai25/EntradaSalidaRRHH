@{
    List<EquiposInfo> listadoEquipos = ViewBag.listadoEquipos;
    List<EquiposInfo> listadoEquipoSugeridos = ViewBag.listadoEquiposSugeridos;
}


<!-- DIRTY Responsive pricing table HTML -->

<div class="row fila-seccion">
    <div class="col-md-12">
        <!-- Chat box -->
        <div class="col-lg-12">
            <div class="box box-success">
                <div style="height: 350px;overflow: auto;">

                        <table class="table table-hover table-responsive" >
                            <thead>
                                <tr>
                                    <th>EQUIPOS</th>
                                    <th class="bg-gray-light">Precio</th>
                                    <th class="bg-gray-light">Proveedor</th>
                                    <th class="bg-gray-light">Características</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="background-color: #4A8059; color: white;" colspan="4" class="sep">ASIGNADOS</td>
                                </tr>
                                @foreach (var equipo in listadoEquipos)
                                {
                                    <tr>
                                        <td>@equipo.NombreEquipo</td>
                                        <td>@equipo.Costo</td>
                                        <td>@equipo.TextoCatalogoProveedor</td>
                                        <td class="default">@equipo.Caracteristicas</td>
                                    </tr>
                                }

                                <tr>
                                    <td style="background-color: #F59324;" colspan="4" class="sep">SUGERIDOS</td>
                                </tr>

                                @foreach (var equipo in listadoEquipoSugeridos)
                                {
                                    <tr>
                                        <td>@equipo.NombreEquipo</td>
                                        <td>@equipo.Costo</td>
                                        <td>@equipo.TextoCatalogoProveedor</td>
                                        <td class="default">@equipo.Caracteristicas</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#seccion-titulo-modal").text('@Html.Raw(ViewBag.TituloModal)');
    });

    $("ul").on("click", "li", function () {
        var pos = $(this).index() + 2;
        $("tr").find('td:not(:eq(0))').hide();
        $('td:nth-child(' + pos + ')').css('display', 'table-cell');
        $("tr").find('th:not(:eq(0))').hide();
        $('li').removeClass('active');
        $(this).addClass('active');
    });

    // Initialize the media query
    var mediaQuery = window.matchMedia('(min-width: 640px)');

    // Add a listen event
    mediaQuery.addListener(doSomething);

    // Function to do something with the media query
    function doSomething(mediaQuery) {
        if (mediaQuery.matches) {
            $('.sep').attr('colspan', 5);
        } else {
            $('.sep').attr('colspan', 2);
        }
    }
    // On load
    doSomething(mediaQuery);
</script>

