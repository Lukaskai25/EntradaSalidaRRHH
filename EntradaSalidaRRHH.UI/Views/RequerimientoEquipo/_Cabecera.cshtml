                            <div class="col-md-8">
                                @Html.DropDownList("Departamento", CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("DTO-01", (Usuario.Departamento ?? 0).ToString()), Etiquetas.TituloComboVacio, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="etiqueta-seccion control-label col-md-4">Empresa:</label>
                            <div class="col-md-8">
                                @Html.DropDownList("Empresa", CatalogoDAL.ObtenerListadoCatalogosByCodigoSeleccion("EMP-01", (Usuario.IdEmpresa ?? 0).ToString()), Etiquetas.TituloComboVacio, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>*@

                <div class="row  fila-seccion">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="etiqueta-seccion control-label col-md-2">Departamento:</label>
                            <div class="col-md-10">
                                @Html.DropDownList("area_departamento_usuario", CatalogoDAL.ListadoCatalogosPorCodigoId("DEPARTAMENTO", (Usuario.IdEmpresa ?? 0), (Usuario.Departamento ?? 0).ToString()), Etiquetas.TituloComboVacio, new { @class = "form-control campo-requerido", required = "" })
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>


